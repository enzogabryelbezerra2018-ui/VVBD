<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="VVBD"
        app:titleCentered="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferramenta segura para transferir e aplicar pacotes"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="12dp"
                android:textAlignment="center"/>

            <!-- Card 1: Instalar SO sem corromper -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstallOS"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_install_os"
                        android:contentDescription="Instalar SO"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvInstallOSTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instalar Sistema Operacional (Modo Seguro)"
                            android:textAppearance="?attr/textAppearanceSubtitle1"/>

                        <TextView
                            android:id="@+id/tvInstallOSDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faz verificação, backup e simulação antes de aplicar. Requer confirmação."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnInstallOS"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="Abrir"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Instalar Android modificado -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInstallModAndroid"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_mod_android"
                        android:contentDescription="Android modificado"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvInstallModTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instalar Android Modificado"
                            android:textAppearance="?attr/textAppearanceSubtitle1"/>

                        <TextView
                            android:id="@+id/tvInstallModDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ferramenta orienta o usuário: verificação, backup e instruções de recovery."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnInstallMod"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="Abrir"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Importar arquivo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImportImage"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_import"
                        android:contentDescription="Importar"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvImportTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Importar imagem / ZIP"
                            android:textAppearance="?attr/textAppearanceSubtitle1"/>

                        <TextView
                            android:id="@+id/tvImportDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Importe uma imagem ou ZIP para verificação (SHA256) e pré-visualização."
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnImport"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_upload"
                        android:contentDescription="Importar"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Rodapé com versão -->
            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VVBD v0.1 — modo seguro"
                android:textAppearance="?attr/textAppearanceCaption"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
